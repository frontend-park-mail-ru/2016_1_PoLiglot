<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
  <div class="col-md-2">
  </div>  
  <div class="main col-md-8">
    <div class="main-form">
      <h2 class="main-form__h2">Регистрация</h2>
      <hr />
      <div class="alert alert-danger error" role="alert">
        <p class="error-alert empty-field"><strong>Ой! </strong>Некоторые поля не заполнены!</p>
        <p class="error-alert little-pass"><strong>Ой! </strong> Пароль состоит менее чем из 8 символов!</p>
        <p class="error-alert invalid-mail"><strong>Ой! </strong> E-mail введён некорректно!</p>
        <p class="error-alert invalid-login"><strong>Ой! </strong> Пароль и Логин может содержать символы: A-Z a-z 0-9!</p>
        <p class="error-alert pass-compare"><strong>Ой! </strong> Пароли не совпадают</p>
      </div> 
      <form class="form-horizontal">
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">E-mail:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputEmail3" placeholder="ivanov@ivan.ru" name="email"/>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Логин:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputEmail3" placeholder="superEnglishMan123" name="login"/>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Пароль:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="**********" name="password"/>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Повторить:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="**********" name="password_repeat"/>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary main-form__submit">Войти</button>
            </div>
          </div>
      </form>
      <hr/>
      <a href="#">
        <button class="btn btn-primary main-form__button">
          <span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span> Назад
        </button>
      </a>
    </div>
  </div>
  <div class="col-md-2">
  </div>
</fest:template>

